# Environment variables for WireGuard WebUI
# Copy this file to .env and modify as needed

# Flask secret keys (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# Flask environment (development, production)
FLASK_ENV=production

# PostgreSQL Database (CHANGE PASSWORD IN PRODUCTION!)
POSTGRES_USER=wireguard
POSTGRES_PASSWORD=your-strong-password-here
POSTGRES_DB=wireguard
DATABASE_URL=postgresql://wireguard:your-strong-password-here@db:5432/wireguard

# Redis for rate limiting (optional - defaults to in-memory if not set)
REDIS_URL=redis://redis:6379/0

# WireGuard settings
WG_CONFIG_PATH=/etc/wireguard
WG_DEFAULT_DNS=1.1.1.1, 8.8.8.8
WG_DEFAULT_PORT=51820
WG_DEFAULT_ENDPOINT=

# JWT token expiration (hours)
JWT_ACCESS_TOKEN_EXPIRES_HOURS=24
